<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
    <servlet-name>MyServlet</servlet-name>
    <servlet-class>wattpad.backend.utils.MyServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WattpadAppResourceServlet</servlet-name>
        <servlet-class>wattpad.backend.servlets.WattpadAppResourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WattpadAppResourceServlet</servlet-name>
        <url-pattern>/app_res</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>